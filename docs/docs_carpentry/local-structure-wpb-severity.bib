  pages = {89-101},
  author = {Kane, Van R. and North, Malcolm P. and Lutz, James A. and Churchill, Derek J. and Roberts, Susan L. and Smith, Douglas F. and McGaughey, Robert J. and Kane, Jonathan T. and Brooks, Matthew L.},
  file = {/Users/michaelkoontz/Zotero/storage/2BC8CBGJ/Kane et al. - 2014 - Assessing fire effects on forest spatial structure.pdf},
  title = {Assessing Fire Effects on Forest Spatial Structure Using a Fusion of {{Landsat}} and Airborne {{LiDAR}} Data in {{Yosemite National Park}}}
}

